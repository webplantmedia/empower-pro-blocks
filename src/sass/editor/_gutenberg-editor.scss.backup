p {
	font-size: $body_font_size;
	line-height: $body_font_line_height;
}

.editor-post-title__block .editor-post-title__input {
	color: $heading_color;
	font-family: $heading_font_family;
	font-weight: $heading_font_weight;
	margin: 0 0 $margin_bottom;
	text-decoration: none;
	font-size: $heading_font_size_h1;
	letter-spacing: $heading_font_letter_spacing;

	a:hover,
	a:focus,
	a {
		text-decoration: none;
		box-shadow: none;
	}
}

/* Regular content width. */

/* 750px + 30px to match paragraph width on front-end and editor. */
.wp-block {
	max-width: $content_width + 30;
}

/* Width of "wide" blocks */

/* 860px + 30px so wide images match width in front-end and editor. */
.wp-block[data-align="wide"] {
	max-width: 990px;
}

.wp-block[data-align="full"] {
	max-width: none;
	margin-left: 0;
	margin-right: 0;
}

/* Background Color */
p.has-background {
	padding: 25px 30px;
}

p.box-shadow {
	box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
}

p.has-background.light-text a {
	color: #fff;
	text-decoration: underline;
}

p.has-background.light-text a:focus,
p.has-background.light-text a:hover {
	text-decoration: none;
}

p.has-background a,
p.has-text-color a {
	color: inherit;
}

p.has-background a:focus,
p.has-background a:hover,
p.has-text-color a:focus,
p.has-text-color a:hover {
	color: inherit;
	text-decoration: none;
}

/* Blockquotes and captions */

/* Cover Image */
.wp-block-cover .wp-block-cover-text {
	color: #fff;
	font-size: 56px;
}

/* Lists */
.editor-block-list__block li {
	line-height: 1.625;
	margin-bottom: 0;
}

/* Preformatted elements */
.wp-block-preformatted pre,
.wp-block-verse pre {
	font-family: monospace;
	font-size: $body_font_size;
	line-height: 1.625 !important;
}

/* Separators */
hr.wp-block-separator {
	border: none;
	border-bottom: $border_width solid $border_color;
	margin: 1.65em auto;
}

hr.wp-block-separator.is-style-dots {
	border: none;
}

/* Tables */
.wp-block-table {
	font-size: $body_font_size;
	line-height: 2;
}

.wp-block-table td,
.wp-block-table th,
.wp-block-table tr {
	border: none;
}

.wp-block-table tr {
	border-top: 1px solid #eee;
}

.wp-block-table tbody {
	border-bottom: 1px solid #eee;
}

/* Buttons */
.wp-block-button.video-button .wp-block-button__link {		
	span {
		display: none !important;
	}
}

/* Galleries */
.wp-block-gallery .blocks-gallery-item {
	margin-bottom: 16px;
}

/* Category Block */
.wp-block-categories ul {
	margin-left: 0;
	padding-left: 0;
}

.wp-block-categories li {
	list-style-type: none;
}

.wp-block[data-align="right"] .wp-block-categories__list {
	text-align: right;
}

.wp-block[data-align="full"] .wp-block-categories__list {
	padding: 0 30px;
}

/* Latest Posts Block */
.wp-block-latest-posts {
	margin-left: 0;
	padding-left: 0;
}

.wp-block-latest-posts li {
	list-style-type: none;
}

.wp-block[data-align="center"] .wp-block-latest-posts {
	text-align: center;
}

.wp-block[data-align="full"] .wp-block-latest-posts {
	padding: 0 30px;
}

/* Columns block */
.wp-block-atomic-blocks-ab-columns,
.wp-block-media-text,
.wp-block-columns {
	// padding-top: 50px;
	// padding-bottom: 50px;
}

.wp-block[data-align="full"] .wp-block-columns > .editor-inner-blocks {
	padding: 0 30px;
}

/* Images */
.wp-block-media-text ul.editor-rich-text__tinymce {
	padding-left: 0;
}

/* URL inspector field in sidebar */
.url-input-inspector-field input {
	max-width: 100% !important;
}
